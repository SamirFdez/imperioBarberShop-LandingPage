---
import Layout from "../layouts/Layout.astro";
import PricingPlans from "../components/PricingPlans.astro";
import {
  siteData,
  pricingPlans,
  comparingPlans,
  faqsPricing,
} from "../data/siteData";
---

<Layout
  title={`Membresía - ${siteData.name}`}
  description="Elige el plan ideal para tu estilo y cuidado personal."
>
  <!-- Hero Section -->
  <section
    class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          Planes de membresía
        </h1>
        <p class="text-xl text-gray-300">
          Planes flexibles que se adaptan a tu estilo y necesidades
        </p>
      </div>
    </div>
  </section>

  <PricingPlans showHeading={false} />

  <!-- Comparison Table Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-4 text-center">
        Comparación de Planes
      </h2>
      <p class="text-xl text-gray-300 mb-12 text-center max-w-2xl mx-auto">
        Compara los beneficios de todas nuestras membresías.
      </p>
      <div
        class="bg-slate-900 rounded-xl border border-slate-700 overflow-x-auto"
      >
        <table class="w-full min-w-[600px]">
          <thead>
            <tr class="border-b border-slate-700">
              <th class="px-6 py-4 text-left text-white font-semibold"
                >Beneficios</th
              >
              {
                pricingPlans.map((plan) => (
                  <th class="px-6 py-4 text-center text-white font-semibold">
                    {plan.name}
                  </th>
                ))
              }
            </tr>
          </thead>
          <tbody class="text-gray-300">
            {
              comparingPlans.map((data) => (
                <tr class="border-b border-slate-700/50">
                  <td class="px-6 py-4 font-medium text-pretty lg:w-5/12">
                    {data.benefit}
                  </td>
                  {data.apply.map((item) => (
                    <td class="px-6 py-4 text-center">
                      {
                        item === true ? (
                        <i class="ri-checkbox-circle-fill text-cyan-500 text-xl" />
                        ) : item === false ? (
                        <i class="ri-close-circle-line text-gray-500 text-xl"></i>
                        ) : (
                        <span class="text-cyan-500 font-semibold">{item}</span>
                        )
                      }
                    </td>
                  ))}
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-12 text-center">
        Preguntas Frecuentes
      </h2>
      <div class="max-w-3xl mx-auto space-y-6">
        {
          faqsPricing.map((faq) => (
            <div class="bg-slate-800 p-6 rounded-xl border border-slate-700 hover:border-cyan-500 transition-all">
              <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2">
                <i class="ri-question-line text-cyan-500" />
                {faq.question}
              </h3>
              <p class="text-gray-400 leading-relaxed">{faq.answer}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-linear-to-b from-cyan-500 to-cyan-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        ¿Buscas más que un simple corte?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Únete a nuestra membresía y disfruta beneficios exclusivos.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-3 bg-white text-cyan-500 hover:bg-slate-100 px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105 shadow-lg"
      >
        Contáctanos
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </section>
</Layout>
