---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import Products from "@/components/Products.astro";
import Classes from "../components/Classes.astro";``
import ClassSchedule from "../components/ClassSchedule.astro";
import PricingPlans from "../components/PricingPlans.astro";
import SuccessStories from "../components/SuccessStories.astro";
import Testimonials from "../components/Testimonials.astro";
import FAQ from "../components/FAQ.astro";
import { siteData } from "../data/siteData";
---

<Layout
  title={`${siteData.name} - ${siteData.tagline}`}
  description={siteData.description}
>
  <Hero />
  <Features />
  <Products />
  <!-- <Classes /> -->
  <!-- <ClassSchedule /> -->
  <PricingPlans />
  <Testimonials />
  <SuccessStories />
  <FAQ />

  <section class="py-20 bg-linear-to-b from-cyan-500 to-cyan-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        ¿Listo para verte mejor?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Nuestros clientes ya disfrutan de cortes que marcan la diferencia
      </p>
      <a
        href="/contact"
        class="inline-flex items-center justify-center gap-3 bg-white text-cyan-500 hover:bg-slate-100 px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105 shadow-lg"
      >
        Contáctanos
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </section>
</Layout>
