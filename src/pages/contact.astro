---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
import { siteData, socialLinks, contactInfo } from "../data/siteData";
import MapImage from "@assets/location.png";
---

<Layout
  title={`Contáctanos - ${siteData.name}`}
  description="Contáctanos para comenzar a transformar tu estilo"
>
  <!-- Hero Section -->
  <section
    class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          Contáctanos
        </h1>
        <p class="text-xl text-gray-300">
          Estamos listos para llevar tu estilo al siguiente nivel. ¡Escríbenos
          hoy!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info & Form -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold text-white mb-8">Escríbenos</h2>
          <div class="space-y-6">
            {
              contactInfo.map((info) => (
                <div class="flex items-start gap-4">
                  <div class="bg-cyan-500 p-4 rounded-lg shrink-0">
                    <i class={`${info.icon} text-2xl text-white`} />
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold text-white mb-2">
                      {info.title}
                    </h3>
                    {Array.isArray(info.content) ? (
                      info.content.map((line) => (
                        <p class="text-gray-400 leading-relaxed">{line}</p>
                      ))
                    ) : (
                      <p class="text-gray-400 leading-relaxed">
                        {info.content}
                      </p>
                    )}
                  </div>
                </div>
              ))
            }
          </div>

          <!-- Social Links -->
          <div class="mt-10">
            <h3 class="text-xl font-semibold text-white mb-4">Siguenos</h3>
            <div class="flex space-x-4">
              {
                socialLinks.map((social) => (
                  <a
                    href={
                      siteData.social[
                        social.name as keyof typeof siteData.social
                      ]
                    }
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-12 h-12 bg-slate-700 hover:bg-cyan-500 rounded-lg flex items-center justify-center transition-all"
                    aria-label={social.label}
                  >
                    <i class={`${social.icon} text-xl text-white`} />
                  </a>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>

  <!-- Visit Expectations Section -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-4 text-center">
        What to Expect When You Visit
      </h2>
      <p class="text-xl text-gray-300 mb-12 text-center max-w-2xl mx-auto">
        Your first visit is important to us. Here's what you can expect.
      </p>
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-12"
      >
        <div
          class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-16 h-16 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-4"
          >
            <i class="ri-user-search-line text-3xl text-orange-500"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Tour & Consultation</h3>
          <p class="text-gray-300 text-sm leading-relaxed">
            We'll give you a comprehensive tour of our facilities and discuss
            your fitness goals
          </p>
        </div>
        <div
          class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-16 h-16 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-4"
          >
            <i class="ri-group-line text-3xl text-orange-500"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Meet Our Team</h3>
          <p class="text-gray-300 text-sm leading-relaxed">
            Get introduced to our trainers and staff who will support you on
            your journey
          </p>
        </div>
        <div
          class="bg-slate-800 p-6 rounded-xl border border-slate-700 text-center hover:border-orange-500 transition-all"
        >
          <div
            class="w-16 h-16 bg-orange-500/10 rounded-lg flex items-center justify-center mx-auto mb-4"
          >
            <i class="ri-file-list-3-line text-3xl text-orange-500"></i>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Membership Options</h3>
          <p class="text-gray-300 text-sm leading-relaxed">
            Explore our flexible membership plans designed to fit your lifestyle
            and budget
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Response Time Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="bg-slate-900 p-8 rounded-xl border border-slate-700">
          <div class="flex items-start gap-6">
            <div class="bg-orange-500/10 p-4 rounded-lg shrink-0">
              <i class="ri-time-line text-4xl text-orange-500"></i>
            </div>
            <div>
              <h3 class="text-2xl font-bold text-white mb-3">Response Time</h3>
              <p class="text-gray-300 mb-4 leading-relaxed">
                We're committed to getting back to you quickly. Here's what you
                can expect:
              </p>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <i
                    class="ri-checkbox-circle-fill text-orange-500 text-xl mt-0.5"
                  ></i>
                  <div>
                    <span class="text-white font-semibold"
                      >Email inquiries:</span
                    >
                    <span class="text-gray-300">
                      We respond within 24 hours during business days</span
                    >
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <i
                    class="ri-checkbox-circle-fill text-orange-500 text-xl mt-0.5"
                  ></i>
                  <div>
                    <span class="text-white font-semibold">Phone calls:</span>
                    <span class="text-gray-300">
                      Available during staffed hours (5 AM - 11 PM)</span
                    >
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <i
                    class="ri-checkbox-circle-fill text-orange-500 text-xl mt-0.5"
                  ></i>
                  <div>
                    <span class="text-white font-semibold"
                      >Form submissions:</span
                    >
                    <span class="text-gray-300">
                      Confirmation within 2 hours, full response within 24 hours</span
                    >
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <i
                    class="ri-checkbox-circle-fill text-orange-500 text-xl mt-0.5"
                  ></i>
                  <div>
                    <span class="text-white font-semibold">Urgent matters:</span
                    >
                    <span class="text-gray-300">
                      Call us directly for immediate assistance</span
                    >
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section (Placeholder) -->
  <section class="py-20 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-white mb-12 text-center">
        Encuéntranos
      </h2>
      <div
        class="max-w-5xl mx-auto bg-slate-800 p-8 rounded-xl border border-slate-700"
      >
        <div
          class="aspect-video bg-slate-700 rounded-lg overflow-hidden relative"
        >
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3783.7724375169505!2d-69.81159892383148!3d18.493964182594517!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8eaf870034f3213d%3A0x83a44c70caffa53a!2sBarber%C3%ADa%3A%20IMPERIOdesign%20BarberShop!5e0!3m2!1ses-419!2sdo!4v1765891986118!5m2!1ses-419!2sdo"
            class="w-full h-full opacity-80 border-0"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout>
