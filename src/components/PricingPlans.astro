---
import { pricingPlans } from "../data/siteData";

interface Props {
  showHeading?: boolean;
}

const { showHeading = true } = Astro.props;
---

<section id="pricing" class="py-20 bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      showHeading && (
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Planes de membresía
          </h2>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Selecciona la membresía ideal para ti
          </p>
        </div>
      )
    }

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {
        pricingPlans.map((plan) => (
          <div
            class={`bg-slate-900 p-8 rounded-xl border-2 flex flex-col h-full ${
              plan.popular
                ? "border-cyan-500 transform scale-105 shadow-lg shadow-cyan-500/20"
                : "border-slate-700"
            } hover:border-cyan-500 transition-all`}
          >
            {plan.popular && (
              <div class="bg-cyan-500 text-white text-sm font-bold px-4 py-1 rounded-full inline-block mb-4 self-start">
                Most Popular
              </div>
            )}

            <h3 class="text-2xl font-bold text-white mb-2">{plan.name}</h3>

            <div class="mb-6">
              <span class="text-3xl text-slate-100">{plan.price}</span>
              <span class="text-gray-400">{plan.period}</span>
            </div>

            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start text-gray-300 gap-3">
                  <i class="ri-checkbox-circle-fill text-cyan-500 text-xl shrink-0 mt-0.5" />
                  <span class="leading-relaxed">{feature}</span>
                </li>
              ))}
            </ul>

            <a
              href="/contact"
              class={`mt-auto w-full px-8 py-4 rounded-lg font-bold text-lg transition-all flex items-center justify-center gap-3 ${
                plan.popular
                  ? "bg-cyan-500 hover:bg-cyan-600 text-white"
                  : "bg-slate-800 hover:bg-slate-700 text-white border border-slate-700"
              }`}
            >
              Empezar
              <i class="ri-arrow-right-line" />
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
