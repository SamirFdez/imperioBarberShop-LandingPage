---
import { Image } from "astro:assets";
import { styleChannge } from "../data/siteData";
---

<section id="success-stories" class="py-20 bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Cambios Que Hablan Por SÃ­ Solos
      </h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Resultados reales por nuestros barberos.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        styleChannge.map((style) => (
          <div class="bg-slate-900 rounded-xl border border-slate-700 hover:border-cyan-500 transition-all overflow-hidden hover:scale-105">
            <div class="grid grid-cols-2 gap-2 p-2">
              <div class="relative aspect-3/4 rounded-lg overflow-hidden">
                <Image
                  src={style.beforeImage}
                  alt={`${style.hairCut} before`}
                  width={400}
                  height={600}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute bottom-2 left-2 bg-red-500/90 text-white text-xs px-2 py-1 rounded font-bold">
                  Before
                </div>
              </div>
              <div class="relative aspect-3/4 rounded-lg overflow-hidden">
                <Image
                  src={style.afterImage}
                  alt={`${style.hairCut} after`}
                  width={400}
                  height={600}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute bottom-2 left-2 bg-green-500/90 text-white text-xs px-2 py-1 rounded font-bold">
                  After
                </div>
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <div>
                  <h3 class="text-xl font-bold text-white">{style.barber}</h3>
                  <p class="text-sm text-gray-400">
                    Barbero
                  </p>
                </div>
              </div>
              <p class="text-gray-300 leading-relaxed italic">
                "{style.hairCut}"
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
